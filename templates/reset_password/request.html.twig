{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
{{ parent() }}
   <link rel="stylesheet" href="{{ asset('styles/css/form.css') }}?v=1.0">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="mickey">
        <img src="{{ asset('images/mickey-formulaire.png') }}" alt="formulaire en forme de mickey" class="image_mickey">
        <div class='form-mickey'>    
        <h2>Mot de passe oublié ?</h2>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {
                'label': 'Email : '
            }) }}
            <div>
                <small>
                    Saisissez votre adresse e-mail et nous vous enverrons un lien
                    pour réinitialiser votre mot de passe.
                </small>
            </div>
            <button class="bouton2">Envoyer le lien de réinitialisation</button>
        {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
