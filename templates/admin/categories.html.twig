{% extends 'base.html.twig' %}
{% block title %}Admin — Catégories{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('styles/css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="container my-4 admin-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Toutes les catégories</h1>
    <a class="btn btn-light" href="{{ path('admin_dashboard') }}">← Retour</a>
  </div>

  <ul class="list-group admin-card">
    {% for c in categories %}
      <li class="list-group-item d-flex justify-content-between">
        <span>{{ c.name }}</span>
        <span>
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('admin_categories_edit', {id: c.id}) }}">Modifier</a>
        <form action="{{ path('admin_categories_delete', {id: c.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Supprimer cette catégorie ?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ c.id) }}">
          <button class="btn btn-sm btn-outline-danger">Supprimer</button>
        </form>
      </span>
    </li>
  {% else %}
    <li class="list-group-item">Aucune catégorie.</li>
  {% endfor %}
  </ul>
</div>
{% endblock %}
