{% extends 'base.html.twig' %}
{% block title %}Admin — Catégories{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('styles/css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="container my-4 admin-dashboard">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Catégories</h1>
    <a class="bouton" href="{{ path('admin_categories_new') }}">Nouvelle catégorie</a>
    <a class="bouton2" href="{{ path('admin_dashboard') }}">← Retour</a>
  </div>

  <div class="table-responsive admin-card">
      <table class="table table-sm align-middle mb-0">
        <thead>
          <tr>
            <th>Nom</th>
          </tr>
        </thead>
        <tbody>
          {% for c in categories %}
            <tr>
              <td><p class="only-mobile">Nom : </p> {{ c.name }}</td>
              <td class="text-end d-flex flex-column justify-content-between align-items-center">
                <a class="bouton3" href="{{ path('admin_categories_edit', {id: c.id}) }}">Modifier</a>
                <form action="{{ path('admin_categories_delete', {id: c.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Supprimer cette catégorie ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ c.id) }}">
                  <button class="btn btn-danger">Supprimer</button>
                </form>
              </td>
            </tr>
          {% else %}
            <tr><td colspan="4">Aucune catégorie.</td></tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
</div>
{% endblock %}
